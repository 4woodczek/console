import React, { useState, useEffect, useMemo } from 'react';
import { 
  Briefcase, 
  Archive, 
  BarChart3, 
  Trash2, 
  Plus, 
  X,
  ShieldCheck,
  Settings2,
  PieChart as PieChartIcon,
  Check,
  ChevronRight,
  TrendingUp,
  TrendingDown
} from 'lucide-react';
import { PieChart, Pie, Cell, ResponsiveContainer, Tooltip as RechartsTooltip } from 'recharts';

const App = () => {
  const [activeTab, setActiveTab] = useState('portfolio');
  const [portfolio, setPortfolio] = useState(() => JSON.parse(localStorage.getItem('vip_portfolio_2026') || '[]'));
  const [archive, setArchive] = useState(() => JSON.parse(localStorage.getItem('vip_archive_2026') || '[]'));
  const [form, setForm] = useState({ symbol: '', lots: '', cost: '' });
  const [sellModeId, setSellModeId] = useState(null);
  const [sellPrice, setSellPrice] = useState('');
  const [expandedId, setExpandedId] = useState(null);
  const [deleteConfirmId, setDeleteConfirmId] = useState(null);

  // Kâr Dağıtım Ayarları (Default: Bebek %40, EMPAE %50, Gider %10)
  const [distributionSettings, setDistributionSettings] = useState(() => {
    const saved = localStorage.getItem('vip_dist_settings_2026');
    return saved ? JSON.parse(saved) : [
      { id: 1, label: 'Bebek Beslenme', percent: 40, color: '#fcd34d' },
      { id: 2, label: 'EMPAE Ana Portföy', percent: 50, color: '#fbbf24' },
      { id: 3, label: 'Komisyon/Gider', percent: 10, color: '#78716c' }
    ];
  });

  const [isEditingDist, setIsEditingDist] = useState(false);

  // Verileri LocalStorage'a Kaydet
  useEffect(() => {
    localStorage.setItem('vip_portfolio_2026', JSON.stringify(portfolio));
    localStorage.setItem('vip_archive_2026', JSON.stringify(archive));
    localStorage.setItem('vip_dist_settings_2026', JSON.stringify(distributionSettings));
  }, [portfolio, archive, distributionSettings]);

  const stats = useMemo(() => {
    const cost = portfolio.reduce((acc, s) => acc + (Number(s.lots) * Number(s.cost)), 0);
    const profit = archive.reduce((acc, s) => acc + (s.totalProfit || 0), 0);
    return { cost, profit };
  }, [portfolio, archive]);

  const handleAdd = () => {
    if (!form.symbol || !form.lots || !form.cost) return;
    setPortfolio([...portfolio, { 
      ...form, 
      id: Date.now(), 
      lots: Number(form.lots), 
      cost: Number(form.cost), 
      symbol: form.symbol.toUpperCase() 
    }]);
    setForm({ symbol: '', lots: '', cost: '' });
  };

  const handleSell = (stock) => {
    const p = Number(sellPrice);
    if (!p) return;
    const profit = (p - stock.cost) * stock.lots;
    
    const splits = {};
    distributionSettings.forEach(set => {
      splits[set.label] = (profit * (set.percent / 100));
    });

    const archived = { 
      ...stock, 
      soldPrice: p, 
      totalProfit: profit, 
      date: new Date().toLocaleDateString('tr-TR'),
      splits
    };
    
    setArchive([archived, ...archive]);
    setPortfolio(portfolio.filter(s => s.id !== stock.id));
    setSellModeId(null);
    setSellPrice('');
  };

  const totalDistPercent = distributionSettings.reduce((a, b) => a + b.percent, 0);

  return (
    <div className="min-h-screen bg-neutral-950 text-neutral-200 font-sans selection:bg-amber-500/30 selection:text-amber-200 overflow-x-hidden">
      
      {/* Arkaplan Efekti */}
      <div className="fixed top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-amber-500/5 blur-[120px] pointer-events-none" />

      {/* Header */}
      <header className="relative pt-8 pb-4 px-6 flex justify-between items-center border-b border-white/5 bg-black/40 backdrop-blur-xl sticky top-0 z-40">
        <div>
          <h1 className="text-xl font-extrabold tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-amber-500 to-amber-200">
            IPORTFÖY <span className="text-[10px] font-light text-neutral-500 ml-1 tracking-widest uppercase italic tracking-normal">VIP</span>
          </h1>
          <p className="text-[8px] text-neutral-500 font-medium tracking-[0.3em] uppercase mt-0.5">Mobil Portföy Terminali</p>
        </div>
        <div className="flex items-center gap-1 text-amber-500/80 bg-amber-500/10 px-2 py-1 rounded-lg border border-amber-500/20">
          <ShieldCheck size={10} />
          <span className="text-[9px] font-bold uppercase">2026 Access</span>
        </div>
      </header>

      <main className="p-4 pb-32 space-y-6 relative z-10 max-w-lg mx-auto">
        
        {activeTab === 'portfolio' && (
          <div className="space-y-6 animate-in fade-in slide-in-from-bottom-4 duration-500">
            {/* Toplam Durum Kartı */}
            <section className="relative overflow-hidden p-6 rounded-[2.5rem] bg-gradient-to-br from-neutral-900 to-black border border-white/5 shadow-2xl">
              <div className="flex justify-between items-start mb-4">
                 <div>
                    <p className="text-[9px] font-bold text-neutral-500 uppercase tracking-[0.2em] mb-1">Aktif Portföy Büyüklüğü</p>
                    <div className="flex items-baseline gap-1">
                        <span className="text-xl font-light text-amber-500">₺</span>
                        <h2 className="text-3xl font-black tracking-tighter text-white">
                        {stats.cost.toLocaleString('tr-TR')}
                        </h2>
                    </div>
                 </div>
                 <div className="p-3 bg-white/5 rounded-2xl">
                    <TrendingUp className="text-amber-500" size={20} />
                 </div>
              </div>
            </section>

            {/* Hızlı Ekleme Formu */}
            <section className="p-4 rounded-[2rem] bg-neutral-900/40 border border-white/5 backdrop-blur-sm">
              <div className="grid grid-cols-7 gap-2">
                <input placeholder="HİSSE" className="col-span-2 bg-black/40 border border-white/10 rounded-xl py-3 px-3 text-xs font-bold outline-none uppercase text-center focus:border-amber-500/50" value={form.symbol} onChange={e => setForm({...form, symbol: e.target.value})} />
                <input placeholder="LOT" type="number" className="col-span-2 bg-black/40 border border-white/10 rounded-xl py-3 px-3 text-xs font-bold outline-none text-center focus:border-amber-500/50" value={form.lots} onChange={e => setForm({...form, lots: e.target.value})} />
                <input placeholder="FİYAT" type="number" className="col-span-2 bg-black/40 border border-white/10 rounded-xl py-3 px-3 text-xs font-bold outline-none text-center focus:border-amber-500/50" value={form.cost} onChange={e => setForm({...form, cost: e.target.value})} />
                <button onClick={handleAdd} className="col-span-1 bg-amber-500 text-black rounded-xl flex items-center justify-center active:scale-95 transition-all shadow-lg shadow-amber-900/20">
                  <Plus size={20} strokeWidth={3} />
                </button>
              </div>
            </section>

            {/* Hisse Listesi */}
            <div className="space-y-3">
              {portfolio.map(item => (
                <div key={item.id} className="p-4 rounded-[2rem] bg-neutral-900/60 border border-white/5 active:bg-neutral-900 transition-all">
                  <div className="flex justify-between items-center">
                    <div className="flex items-center gap-4">
                      <div className="w-10 h-10 rounded-2xl bg-black/50 flex items-center justify-center font-black text-amber-500 text-xs border border-white/5">
                        {item.symbol.substring(0, 2)}
                      </div>
                      <div>
                        <h4 className="text-sm font-black tracking-tight">{item.symbol}</h4>
                        <p className="text-[9px] text-neutral-500 font-bold uppercase">{item.lots} Lot</p>
                      </div>
                    </div>
                    <div className="flex items-center gap-4">
                      <div className="text-right">
                        <p className="text-sm font-mono font-bold">₺{item.cost.toFixed(2)}</p>
                        <p className="text-[8px] text-neutral-600 font-bold uppercase">Birim</p>
                      </div>
                      {sellModeId === item.id ? (
                        <div className="flex gap-1 animate-in slide-in-from-right-2">
                          <input autoFocus type="number" placeholder="Satış" className="w-16 bg-neutral-800 rounded-lg px-2 py-1.5 text-[10px] font-bold text-emerald-400 outline-none" value={sellPrice} onChange={e => setSellPrice(e.target.value)} />
                          <button onClick={() => handleSell(item)} className="p-2 bg-emerald-500 text-black rounded-lg"><Check size={14}/></button>
                        </div>
                      ) : (
                        <button onClick={() => setSellModeId(item.id)} className="p-2.5 rounded-xl bg-white/[0.03] text-neutral-500 active:text-amber-500 transition-all">
                          <Archive size={18} />
                        </button>
                      )}
                    </div>
                  </div>
                </div>
              ))}
              {portfolio.length === 0 && (
                <div className="py-12 text-center">
                  <p className="text-[10px] text-neutral-600 font-bold uppercase tracking-widest">Portföyünüz boş</p>
                </div>
              )}
            </div>
          </div>
        )}

        {activeTab === 'report' && (
          <div className="space-y-6 animate-in fade-in slide-in-from-bottom-4 duration-500">
            {/* Dağıtım Ayarları Paneli */}
            <section className="p-6 rounded-[2.5rem] bg-neutral-900/50 border border-white/5">
              <div className="flex justify-between items-center mb-6">
                <div>
                  <h3 className="text-sm font-black uppercase tracking-widest flex items-center gap-2 text-amber-400">
                    <Settings2 size={16} /> Strateji Paneli
                  </h3>
                  <p className="text-[9px] text-neutral-500 font-bold uppercase mt-1">Kâr Dağıtım Oranları</p>
                </div>
                <button 
                  onClick={() => setIsEditingDist(!isEditingDist)}
                  className={`p-2.5 rounded-xl transition-all ${isEditingDist ? 'bg-amber-500 text-black' : 'bg-white/5 text-neutral-400'}`}
                >
                  {isEditingDist ? <Check size={18} strokeWidth={3} /> : <Settings2 size={18} />}
                </button>
              </div>

              {isEditingDist ? (
                <div className="space-y-4 animate-in fade-in zoom-in-95 duration-200">
                  {distributionSettings.map((item, idx) => (
                    <div key={item.id} className="flex gap-2 items-center bg-black/40 p-3 rounded-2xl border border-white/5">
                      <input 
                        className="flex-1 bg-transparent border-none outline-none text-xs font-bold text-neutral-200"
                        value={item.label}
                        onChange={(e) => {
                          const newSets = [...distributionSettings];
                          newSets[idx].label = e.target.value;
                          setDistributionSettings(newSets);
                        }}
                      />
                      <div className="flex items-center gap-1 bg-neutral-800 rounded-lg px-2 py-1">
                        <span className="text-[10px] text-amber-500 font-black">%</span>
                        <input 
                          type="number"
                          className="w-10 bg-transparent border-none outline-none text-xs font-mono font-bold text-white text-center"
                          value={item.percent}
                          onChange={(e) => {
                            const newSets = [...distributionSettings];
                            newSets[idx].percent = Number(e.target.value);
                            setDistributionSettings(newSets);
                          }}
                        />
                      </div>
                      <button onClick={() => setDistributionSettings(distributionSettings.filter(s => s.id !== item.id))} className="p-1 text-red-500/50"><X size={14} /></button>
                    </div>
                  ))}
                  <button 
                    onClick={() => setDistributionSettings([...distributionSettings, { id: Date.now(), label: 'YENİ HEDEF', percent: 0, color: '#444' }])}
                    className="w-full py-3 border border-dashed border-white/10 rounded-2xl text-[9px] font-black text-neutral-500 uppercase"
                  >
                    + Yeni Kalem Ekle
                  </button>
                  {totalDistPercent !== 100 && (
                    <p className="text-[8px] text-red-400 font-bold text-center italic">Toplam oran %100 olmalı!</p>
                  )}
                </div>
              ) : (
                <div className="flex flex-col items-center">
                  <div className="h-44 w-full relative">
                    <ResponsiveContainer width="100%" height="100%">
                      <PieChart>
                        <Pie data={distributionSettings} innerRadius={50} outerRadius={70} paddingAngle={5} dataKey="percent" stroke="none">
                          {distributionSettings.map((entry, index) => <Cell key={index} fill={entry.color} />)}
                        </Pie>
                        <RechartsTooltip contentStyle={{ backgroundColor: '#171717', border: 'none', borderRadius: '12px', fontSize: '10px' }} />
                      </PieChart>
                    </ResponsiveContainer>
                    <div className="absolute inset-0 flex flex-col items-center justify-center pointer-events-none">
                      <span className="text-[8px] font-bold text-neutral-500 uppercase">Dağılım</span>
                      <span className="text-sm font-black text-amber-500">%100</span>
                    </div>
                  </div>
                  <div className="grid grid-cols-2 gap-x-8 gap-y-2 mt-4 w-full px-4">
                    {distributionSettings.map(item => (
                      <div key={item.id} className="flex items-center justify-between border-b border-white/5 pb-2">
                        <span className="text-[10px] font-bold text-neutral-400 uppercase tracking-tighter truncate max-w-[80px]">{item.label}</span>
                        <span className="text-[10px] font-mono font-black text-amber-500">%{item.percent}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )}
            </section>

            {/* Gerçekleşen Birikimler */}
            <div className="space-y-3">
              <h3 className="text-[10px] font-bold text-neutral-500 uppercase tracking-widest px-2">Hedef Birikimleri</h3>
              {distributionSettings.map(set => {
                const totalForCategory = archive.reduce((acc, curr) => acc + (curr.splits?.[set.label] || 0), 0);
                return (
                  <div key={set.id} className="p-5 rounded-[2rem] bg-neutral-900/30 border border-white/5 flex justify-between items-center active:scale-[0.98] transition-all">
                    <div className="flex items-center gap-3">
                      <div className="w-10 h-10 rounded-2xl bg-black/40 flex items-center justify-center text-amber-500 border border-white/5">
                        <PieChartIcon size={16} />
                      </div>
                      <div>
                        <p className="text-[8px] text-neutral-500 font-black uppercase tracking-widest">{set.label}</p>
                        <h4 className="text-xl font-black tracking-tighter text-white">
                          ₺{Math.round(totalForCategory).toLocaleString('tr-TR')}
                        </h4>
                      </div>
                    </div>
                    <div className="text-right">
                       <ChevronRight size={16} className="text-neutral-700" />
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        )}

        {activeTab === 'archive' && (
          <div className="space-y-6 animate-in fade-in slide-in-from-bottom-4 duration-500">
            <section className="p-8 rounded-[2.5rem] bg-gradient-to-br from-emerald-950/20 to-black border border-emerald-500/10 text-center">
              <p className="text-[10px] font-bold text-emerald-500/60 uppercase tracking-[0.2em] mb-1">Toplam Arşiv Kârı</p>
              <h2 className="text-4xl font-black tracking-tighter text-emerald-400">
                ₺{stats.profit.toLocaleString('tr-TR')}
              </h2>
            </section>

            <div className="space-y-2">
              {archive.map(item => (
                <div key={item.id} className="bg-neutral-900/40 border border-white/5 rounded-[2rem] overflow-hidden">
                  <div className="p-4 flex justify-between items-center" onClick={() => setExpandedId(expandedId === item.id ? null : item.id)}>
                    <div className="flex items-center gap-3">
                      <div className="w-10 h-10 rounded-2xl bg-neutral-800 flex items-center justify-center text-amber-500 font-black text-xs">{item.symbol[0]}</div>
                      <div>
                        <h4 className="text-sm font-black tracking-tight">{item.symbol}</h4>
                        <p className="text-[8px] text-neutral-500 font-bold uppercase">{item.date}</p>
                      </div>
                    </div>
                    <div className="flex items-center gap-3">
                      <p className="text-sm font-black text-emerald-400">
                        +₺{Math.round(item.totalProfit).toLocaleString('tr-TR')}
                      </p>
                      <button onClick={(e) => { e.stopPropagation(); setDeleteConfirmId(item.id); }} className="text-red-500/30 p-2">
                        <Trash2 size={16} />
                      </button>
                    </div>
                  </div>
                  {expandedId === item.id && (
                    <div className="px-4 pb-4 pt-1 grid grid-cols-2 gap-2 animate-in slide-in-from-top-2">
                      {Object.entries(item.splits || {}).map(([key, val]) => (
                        <div key={key} className="p-3 bg-black/40 rounded-2xl border border-white/5">
                          <p className="text-xs font-bold text-neutral-200">₺{Math.round(val)}</p>
                          <p className="text-[8px] text-neutral-600 uppercase font-black truncate">{key}</p>
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        )}
      </main>

      {/* Mobil Alt Menü */}
      <nav className="fixed bottom-0 left-0 right-0 z-50 px-6 pb-10 pt-4 bg-black/60 backdrop-blur-2xl border-t border-white/5">
        <div className="max-w-md mx-auto flex justify-between items-center bg-neutral-900/50 p-2 rounded-3xl border border-white/5 shadow-2xl">
          <button onClick={() => setActiveTab('portfolio')} className={`flex-1 flex flex-col items-center gap-1 py-3 rounded-2xl transition-all ${activeTab === 'portfolio' ? 'bg-amber-500/10 text-amber-500' : 'text-neutral-500'}`}>
            <Briefcase size={22} strokeWidth={activeTab === 'portfolio' ? 2.5 : 2} />
            <span className="text-[8px] font-black uppercase tracking-widest">Takip</span>
          </button>
          
          <button onClick={() => setActiveTab('archive')} className={`flex-1 flex flex-col items-center gap-1 py-3 rounded-2xl transition-all ${activeTab === 'archive' ? 'bg-amber-500/10 text-amber-500' : 'text-neutral-500'}`}>
            <Archive size={22} strokeWidth={activeTab === 'archive' ? 2.5 : 2} />
            <span className="text-[8px] font-black uppercase tracking-widest">Kasa</span>
          </button>

          <button onClick={() => setActiveTab('report')} className={`flex-1 flex flex-col items-center gap-1 py-3 rounded-2xl transition-all ${activeTab === 'report' ? 'bg-amber-500/10 text-amber-500' : 'text-neutral-500'}`}>
            <BarChart3 size={22} strokeWidth={activeTab === 'report' ? 2.5 : 2} />
            <span className="text-[8px] font-black uppercase tracking-widest">Analiz</span>
          </button>
        </div>
      </nav>

      {/* Silme Onayı */}
      {deleteConfirmId && (
        <div className="fixed inset-0 z-[100] flex items-center justify-center p-6 bg-black/80 backdrop-blur-md animate-in fade-in">
          <div className="w-full max-w-[280px] bg-neutral-900 rounded-[2.5rem] p-8 border border-white/10 text-center shadow-2xl">
            <h3 className="text-md font-black mb-2 uppercase tracking-tighter">İşlemi Onayla</h3>
            <p className="text-[10px] text-neutral-500 mb-8 uppercase font-bold tracking-widest">Arşivden kalıcı silme</p>
            <div className="flex gap-2">
              <button onClick={() => setDeleteConfirmId(null)} className="flex-1 py-4 bg-white/5 rounded-2xl text-[10px] font-black uppercase">Vazgeç</button>
              <button onClick={() => { setArchive(archive.filter(a => a.id !== deleteConfirmId)); setDeleteConfirmId(null); }} className="flex-1 py-4 bg-red-600 rounded-2xl text-[10px] font-black uppercase">SİL</button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default App;
